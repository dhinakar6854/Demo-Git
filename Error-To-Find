# Creating Public Route Table 
resource "aws_route_table" "public-rt" {
  vpc_id = aws_vpc.default.id
  route {
    cidr_block = "0.0.0.0/0"
    gateway_id = aws_internet_gateway.default_igw.id
  }
  tags = {
    Name        = "${var.vpc_name}-Public-RT"
    Environment = var.environment
    Owner       = local.owner
    PROJ-ID     = local.projid
  }
}

# Public Subnets Routing Table Association
resource "aws_route_table_association" "public_rt_ast" {
  count          = length(var.public_subnets_cidr)
  subnet_id      = element(aws_subnet.public_subnets.*.id, count.index)
  route_table_id = aws_route_table.public-rt.id
}


#Creating Private Route Table
resource "aws_route_table" "private-rt" {
  vpc_id = aws_vpc.default.id
  route {
    cidr_block     = "0.0.0.0/0"
    nat_gateway_id = aws_nat_gateway.natgw.id
  }
  tags = {
    Name        = "${var.vpc_name}-Private-RT"
    Environment = var.environment
    Owner       = local.owner
    PROJ-ID     = local.projid
  }
}

# Private Subnets Routing Table Association
resource "aws_route_table_association" "private_rt_ast" {
  count          = length(var.private_subnets_cidr)
  subnet_id      = element(aws_subnet.private_subnets.*.id, count.index)
  route_table_id = aws_route_table.private-rt.id
}
